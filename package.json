{
  "name": "mrbelly",
  "version": "1.0.0",
  "main": "dist/main.js",
  "license": "MIT",
  "dependencies": {
    "@hapi/hapi": "^20.2.2",
    "@hapi/vision": "^6.1.0",
    "@types/pug": "^2.0.6",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@hapi/eslint-plugin": "^6.0.0",
    "@types/hapi__hapi": "^20.0.12",
    "@types/hapi__vision": "^5.5.3",
    "@types/node": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "copyfiles": "^2.4.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4",
    "watch-run": "^1.2.5"
  },
  "scripts": {
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 src/**/*.pug src/**/*.css dist/",
    "pre-build": "yarn clean && yarn copy-files",
    "dev:files": "yarn watch-run -p src/**/*.pug yarn copy-files",
    "dev:tsc": "tsc --watch -p .",
    "dev:serve": "nodemon -e js,pug -w dist dist/main.js",
    "dev": "yarn pre-build && run-p dev:*"
  }
}
